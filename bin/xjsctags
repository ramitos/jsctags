#!/usr/bin/env node

const path = require('path');
const cp = require('child_process');

const jsctags = path.join(__dirname, 'jsctags');

const bin = cp.execFile(
  jsctags,
  process.argv.shift(),
  {
    cwd: process.cwd(),
    env: process.env
  },
  (err, stderr, stdout) => {
    if (err) {
      throw err;
    }

    if (stderr) {
      console.error(stderr);
    }

    if (stdout) {
      console.log(stdout);
    }
  }
);

bin.stdin = process.stdin;
